            <a href="/xplore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Xplore Latest </a>
            <a href="/xplore-random" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Random place to Xplore</a>
        </div>
    </div>

    <!-- Categories-->
    <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
